{
  "manifest_version": 2,
  "name": "Pomodoro GNOME Bridge",
  "version": "1.0",
  "description": "Bridge between pomodoro-tracker.com and GNOME panel",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://pomodoro-tracker.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pomodoro@local"
    }
  }
}
